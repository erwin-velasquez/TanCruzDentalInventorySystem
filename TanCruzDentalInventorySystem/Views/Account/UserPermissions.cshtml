@model TanCruzDentalInventorySystem.ViewModel.UserPermissionsViewModel
@{
	ViewBag.Title = "User Permissions";
}

<h2>Effective Role Permissions for user: <strong>@Html.DisplayFor(model => model.UserName)</strong></h2>

<table class="table">
	<tr>
		<th>
			Role Name
		</th>
		<th>
			Role Description
		</th>
		<th></th>
	</tr>
	@foreach (var item in Model.Roles)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.RoleName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RoleDescription)
			</td>
		</tr>
	}
</table>
<div>
	@Html.ActionLink("Back to List", "UserList")
</div>