@model TanCruzDentalInventorySystem.ViewModels.ItemPriceFormViewModel

<div class="form-horizontal">
	<h4 class="form-title">
		Item Price
		@if (Request.IsAuthenticated && User.IsInRole("Editor"))
		{
			@Html.ActionLink("[Edit]", "EditItemPriceRecord", new { itemPriceId = Model.ItemPrice.ItemPriceId }, new { @style = "font-size:8pt" })
		}
	</h4>
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="row">
		<div class="form-group col-md-4">
			@Html.LabelFor(model => model.ItemPrice.ItemPriceName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.ItemPrice.ItemPriceName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group col-md-4">
			@Html.LabelFor(model => model.ItemPrice.ItemPriceDescription, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.ItemPrice.ItemPriceDescription, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group col-md-4">
			@Html.LabelFor(model => model.ItemPrice.ItemPriceId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DisplayFor(model => model.ItemPrice.ItemPriceId, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
	</div>

    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemPrice.IsDefault, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemPrice.IsDefault, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemPrice.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemPrice.Type, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemPrice.Item.ItemId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemPrice.Item.ItemId, new { htmlAttributes = new { @class = "form-control" }, required = "" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemPrice.BaseCurrency.CurrencyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemPrice.BaseCurrency.CurrencyName, new { htmlAttributes = new { @class = "form-control" }, required = "" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemPrice.PriceAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemPrice.PriceAmount, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

</div>

<p>
    @Html.ActionLink("Back to List", "GetItemPrices", new { itemId = Model.ItemPrice.Item.ItemId })
</p>
