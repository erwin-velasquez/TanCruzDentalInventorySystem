@model TanCruzDentalInventorySystem.ViewModels.ItemGroupFormViewModel

@{
    ViewBag.Title = "EditItemGroupRecord";
}


@using (Html.BeginForm("SaveItemGroupRecord", "ItemGroup", FormMethod.Post, new { @id = "MainForm", @class = "form-horizontal needs-validation bg-light", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="form-title">Item Group</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.ItemGroup.ItemGroupName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemGroup.ItemGroupName, new { htmlAttributes = new { @class = "form-control" }, required = "" })
                    @Html.ValidationMessageFor(model => model.ItemGroup.ItemGroupName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.ItemGroup.ItemGroupDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemGroup.ItemGroupDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemGroup.ItemGroupDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.ItemGroup.ItemGroupId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.ItemGroup.VersionTimeStamp)
                    @Html.EditorFor(model => model.ItemGroup.ItemGroupId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ItemGroup.ItemGroupId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="btn"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="submitButton" type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
