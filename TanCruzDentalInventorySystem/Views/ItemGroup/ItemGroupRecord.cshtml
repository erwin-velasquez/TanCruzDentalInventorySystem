@model TanCruzDentalInventorySystem.ViewModels.ItemGroupViewModel

<div class="form-horizontal">
    <h4 class="form-title">
        Item Group
        @if (Request.IsAuthenticated && User.IsInRole("Editor"))
        {
            @Html.ActionLink("[Edit]", "EditItemGroup", new { itemGroupId = Model.ItemGroupId }, new { @style = "font-size:8pt" })
        }
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemGroupName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemGroupName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemGroupDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemGroupDescription, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.ItemGroupId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ItemGroupId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

  

</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>