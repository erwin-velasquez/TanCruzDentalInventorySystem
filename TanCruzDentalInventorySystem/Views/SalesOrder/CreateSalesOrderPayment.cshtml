@model TanCruzDentalInventorySystem.ViewModels.ScheduledPaymentFormViewModel

@{
    ViewBag.Title = "CreateSalesOrderPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sales Order Payment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="form-group col-md-4">
                    @Html.Label("ScheduledPayment_ScheduledPaymentId", "Payment ID", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.ScheduledPayment.VersionTimeStamp)
                        @Html.EditorFor(model => model.ScheduledPayment.ScheduledPaymentId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.ScheduledPayment.ScheduledPaymentId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.SalesOrder.SalesOrderId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SalesOrder.SalesOrderId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, required = "" })
                        @Html.ValidationMessageFor(model => model.SalesOrder.SalesOrderId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    @Html.Label("SalesOrder_BusinessPartner_BusinessPartnerName", "Payment by", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SalesOrder.BusinessPartner.BusinessPartnerName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SalesOrder.BusinessPartner.BusinessPartnerName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <table id="salesOrderPaymentDetailTable" class="display hover"></table>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.Label("SalesOrder_SalesOrderTax", "Sales Order Total Tax", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SalesOrder.SalesOrderTax, new { htmlAttributes = new { @class = "form-control readonly", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SalesOrder.SalesOrderTax, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.Label("SalesOrder_SalesOrderTotal", "Sales Order Total Amount", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SalesOrder.SalesOrderTotal, new { htmlAttributes = new { @class = "form-control readonly", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SalesOrder.SalesOrderTotal, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section scripts{

    @Scripts.Render("~/Scripts/SalesOrder/SalesOrderPaymentCreate.js");
}